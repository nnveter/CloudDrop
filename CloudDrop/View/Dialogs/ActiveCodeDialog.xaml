<ContentDialog
    x:Class="CloudDrop.View.Dialogs.ActiveCodeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CloudDrop.View.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="ActiveCodeDialog"
    Title="Activate code"
    IsPrimaryButtonEnabled="False"
    PrimaryButtonText="Active"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    CloseButtonText="Cancel"
    CloseButtonClick="ContentDialog_CloseButtonClick"
    Style="{ThemeResource DefaultContentDialogStyle}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    CornerRadius="8">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
            <TextBox x:Uid="TextBoxCode" x:Name="TextBoxCode" VerticalAlignment="Bottom" TextChanged="TextBox_TextChanged" />
        </StackPanel>
    </Grid>
    
</ContentDialog>
