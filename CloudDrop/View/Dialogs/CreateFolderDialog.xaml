<ContentDialog
    x:Class="CloudDrop.View.Dialogs.CreateFolderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create new Folder"
    PrimaryButtonText="Create"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    CloseButtonText="Cancel"
    CloseButtonClick="ContentDialog_CloseButtonClick"
    Style="{ThemeResource DefaultContentDialogStyle}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    CornerRadius="8">

    <Grid>
        <StackPanel>
            <TextBox x:Name="FolderNameBox" PlaceholderText="Folder name" TextChanged="FolderNameBox_TextChanged"/>
            <TextBlock x:Name="ErrorTextBlock" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,5,0,0" Foreground="{x:Bind ErrorColor}"/>
        </StackPanel>
    </Grid>
</ContentDialog>
